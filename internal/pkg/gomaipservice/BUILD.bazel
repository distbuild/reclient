        "@goma//:protobuf",
        "@goma//:root",
        "@goma//:zlib",
        "//goma:goma_input_processor",
        "//pkg/version:version_cc",
    ] + select({
        "@platforms//os:windows": [
            "@com_github_google_glog//:glog",
